<%- include("../partials/header") %>
<div class="container">
	<div class="row">
		<div class="col-md-3">
			<p class="lead">Final Destination</p>
			<div class="list-group">
				<li class="list-group-item active">Info 1</li>
				<li class="list-group-item">Info 2</li>
				<li class="list-group-item">Info 3</li>
				
			</div>
		</div>
		<div class="col-md-9">
			<div class="thumbnail">
				<img class="img-responsive" src="<%=dreamplace.image%>">
				<div class="caption-full">
					<h4 class="pull-right">$100k</h4>
					<h4><a href="#"><%=dreamplace.name%></a></h4>
					<p><%=dreamplace.description%></p>
					<p>
						<em>Created By <%=dreamplace.author.username%></em></p>
					<%if (currentUser && dreamplace.author.id.equals(currentUser._id)){%>
						<a class="btn btn-xs btn-warning" href="/dreamplaces/<%=dreamplace._id%>/edit">Edit</a>
						<form class="del" action="/dreamplaces/<%=dreamplace._id%>?_method=DELETE" method="POST">
							<button class="btn btn-xs btn-danger">
								Delete
							</button>
						</form>
					<%}%>
				</div>
			<div class="well">
				<div class="text-right">
					<a class="btn btn-success" href="/dreamplaces/<%=dreamplace._id%>/comments/new">Add a comment</a>
					
				</div>
				<hr>
				<%dreamplace.comments.forEach(function(comment){ %>
				<div class="row">
					<div class="col-md-12">
						<strong><%=comment.author.username.toUpperCase()%></strong>
						<span class="pull-right">2 days ago</span>
						
						<p><%=comment.text%></p>
						<%if(currentUser && comment.author.id.equals(currentUser._id)){%>
							<a class="btn btn-xs btn-warning" href="/dreamplaces/<%=dreamplace._id%>/comments/<%=comment._id%>/edit">Edit</a>
						
							<form class="del" action="/dreamplaces/<%=dreamplace._id%>/comments/<%=comment._id%>?_method=DELETE" method="POST">
							<input type="submit" class="btn btn-xs btn-danger" value="Delete">
							</form>
						<%}%>
					</div>
					
				</div>
				<% })%>
		</div>
	</div>
	
</div>
	






<%- include("../partials/footer") %>
<%- include("../partials/header") %>
<div class="container">
	<div class="row">
		<h1 style="text-align:center">Edit <%=dreamplace.name%></h1>
		<div style="width: 30%; margin: 25px auto;">
			<form action="/dreamplaces/<%=dreamplace._id%>?_method=PUT" method="POST">
				<div class="form-group">
					<input class="form-control"type="text" name="dreamplace[name]" value="<%=dreamplace.name%>">
				</div>
				<div class="form-group">
					<input class="form-control"type="text" name="dreamplace[image]" value="<%=dreamplace.image%>">
				</div>
				<div class="form-group">
					<input class="form-control"type="text" name="dreamplace[description]" value="<%=dreamplace.description%>">
				</div>
				<div class="form-group">
					<button class="btn btn-lg btn-primary btn-block">DONE!</button>
				</div>
			<a href="/dreamplaces">Go Back</a>
		</form>
		</div>
		
	
			
	</div>
	
</div>
<%- include("../partials/footer") %>
